{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,   // ✅ allow JSON imports
    "allowSyntheticDefaultImports": true // ✅ helps with clean imports
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
